<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8">
 <RelativeLayout
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:background="@drawable/fondo6"
   android:orientation="vertical"
   tools:ignore="MissingConstraints">
   <TextView
     android:id="@+id/titulo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true"
     android:layout_gravity="center_horizontal"
     android:layout_marginLeft="140dp"
     android:layout_marginTop="10dp"
     android:fontFamily="sans-serif-black"
     android:text="Memorama"
     android:textColor="@android:color/background_dark"
     android:textSize="25sp"
     tools:layout_editor_absoluteX="0dp"
     tools:layout_editor_absoluteY="0dp" />

   <TextView
     android:id="@+id/intentosTotales"
     android:layout_width="177dp"
     android:layout_height="40dp"
     android:layout_alignParentLeft="false"
     android:layout_alignParentTop="false"
     android:layout_marginLeft="10dp"
     android:layout_marginTop="80dp"

     android:background="#D11668"
     android:fontFamily="sans-serif-black"
     android:textAlignment="center"
     android:textColor="#FDFCFC"
     android:textSize="17sp"
     tools:layout_editor_absoluteX="0dp"
     tools:layout_editor_absoluteY="0dp" />

   <TextView
     android:id="@+id/puntaje"
     android:layout_width="190dp"
     android:layout_height="46dp"
     android:layout_alignParentLeft="false"
     android:layout_alignParentTop="false"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="500dp"
     android:background="#10AB06"
     android:fontFamily="sans-serif-black"
     android:textAlignment="center"
     android:textColor="#FDFCFC"
     android:textSize="17sp"
     tools:layout_editor_absoluteX="0dp"
     tools:layout_editor_absoluteY="0dp" />



   <TextView
     android:id="@+id/int1"
     android:layout_width="175dp"
     android:layout_height="43dp"
     android:layout_alignParentLeft="false"
     android:layout_alignParentTop="false"
     android:layout_marginLeft="220dp"
     android:layout_marginTop="80dp"
     android:background="#0A69C9"
     android:fontFamily="sans-serif-black"
     android:textAlignment="center"
     android:textColor="#FDFCFC"
     android:textSize="17sp"
     tools:layout_editor_absoluteX="0dp"
     tools:layout_editor_absoluteY="0dp" />

   <TextView
     android:id="@+id/espacio2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>

   <include

     layout="@layout/images"
     android:layout_width="wrap_content"
     android:layout_height="264dp"
     android:layout_marginTop="200dp"
     tools:layout_editor_absoluteX="0dp"
     tools:layout_editor_absoluteY="152dp" />

   <Button
     android:id="@+id/buttonSalir2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="570dp"
     android:backgroundTint="@android:color/holo_orange_dark"
     android:text="Salir"
     android:textColor="@color/black" />
     <ImageButton
         android:id="@+id/sonido2"
         android:layout_width="69dp"
         android:layout_height="65dp"
         android:layout_marginLeft="7dp"
         android:layout_marginTop="8dp"
         android:background="@drawable/play"
         android:text="Button" />
 </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
