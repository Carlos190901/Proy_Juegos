<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2821"
    android:visibility="visible"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="740dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fondo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002">


        <ImageButton
            android:id="@+id/imageButtonIng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="600dp"
            android:background="@color/cardview_shadow_end_color"
            app:srcCompat="@drawable/letrero1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="127dp"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="635dp"
            android:fontFamily="@font/snow"
            android:text="COMENZAR"
            android:textColor="#316B75"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:background="@drawable/mipbstyle"
            android:backgroundTint="@color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/thempo"
            android:shadowColor="@color/white"
            android:shadowDy="0"
            android:text="0 %"
            android:textAlignment="center"
            android:textColor="#8BFCAD"
            android:textSize="48sp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/sonido2"
            android:layout_width="69dp"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/play"
            android:text="Button" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>