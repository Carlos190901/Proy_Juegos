<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo4"
    tools:context=".MainActivity">

  <TextView
    android:id="@+id/textView"
    android:layout_width="352dp"
    android:layout_height="68dp"

    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"
    android:fontFamily="@font/south"
    android:text="JUEGO GATO"
    android:textAlignment="center"
    android:textColor="#316B75"
    android:textSize="24sp" />

  <RelativeLayout
    android:id="@+id/btn5"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_centerInParent="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/purple_200">

    <ImageView
      android:id="@+id/buttonImage5"
      android:layout_width="match_parent"

      android:layout_height="match_parent">

    </ImageView>

  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/btn4"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_centerInParent="true"
    android:layout_toLeftOf="@id/btn5"
    android:background="#F3ACC0">

    <ImageView
      android:id="@+id/buttonImage4"
      android:layout_width="match_parent"

      android:layout_height="match_parent">

    </ImageView>

  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/btn6"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_centerInParent="true"
    android:layout_toRightOf="@id/btn5"
    android:background="#F3ACC0">

    <ImageView
      android:id="@+id/buttonImage6"
      android:layout_width="match_parent"

      android:layout_height="match_parent">

    </ImageView>

  </RelativeLayout>

  <RelativeLayout
    android:layout_width="330dp"
    android:layout_height="8dp"
    android:layout_above="@id/btn5"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="8dp"
    android:background="#12BF9D">

  </RelativeLayout>

  <RelativeLayout
    android:layout_width="330dp"
    android:layout_height="8dp"
    android:layout_below="@id/btn5"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="8dp"
    android:background="#12BF9D">

  </RelativeLayout>

  <RelativeLayout
    android:layout_width="8dp"
    android:layout_height="350dp"
    android:layout_centerVertical="true"
    android:layout_marginRight="-14dp"
    android:layout_toLeftOf="@id/btn5"
    android:background="#12BF9D">

  </RelativeLayout>

  <RelativeLayout
    android:layout_width="8dp"
    android:layout_height="350dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="-14dp"
    android:layout_toRightOf="@id/btn5"
    android:background="#12BF9D">

  </RelativeLayout>


  <Button
    android:id="@+id/Reset"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/btn8"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="80dp"
    android:backgroundTint="#F9E898"
    android:text="Terminar Juego"
    android:textColor="@color/black"
    android:textSize="16sp">

  </Button>

  <RelativeLayout
    android:id="@+id/btn8"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_below="@id/btn5"
    android:layout_centerInParent="true"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:background="#F3ACC0">

    <ImageView
      android:id="@+id/buttonImage8"
      android:layout_width="match_parent"

      android:layout_height="match_parent">

    </ImageView>

  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/btn7"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_below="@id/btn5"
    android:layout_centerInParent="true"
    android:layout_marginTop="20dp"

    android:layout_toLeftOf="@id/btn8"

    android:background="@color/purple_200">

    <ImageView
      android:id="@+id/buttonImage7"
      android:layout_width="match_parent"

      android:layout_height="match_parent">

    </ImageView>

  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/btn9"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_below="@id/btn5"
    android:layout_centerInParent="true"
    android:layout_marginTop="20dp"

    android:layout_toRightOf="@id/btn8"

    android:background="@color/purple_200">

    <ImageView
      android:id="@+id/buttonImage9"
      android:layout_width="match_parent"

      android:layout_height="match_parent">

    </ImageView>

  </RelativeLayout>


  <LinearLayout
    android:layout_width="317dp"
    android:layout_height="135dp"
    android:layout_centerHorizontal="false"
    android:layout_marginLeft="80dp"
    android:layout_marginTop="80dp"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">


    <TextView
      android:id="@+id/ScoreX"
      android:layout_width="250dp"
      android:layout_height="57dp"
      android:fontFamily="casual"
      android:text="Jugador 1 :- 0"
      android:textColor="#420E79"
      android:textSize="30sp"
      android:textStyle="bold">

    </TextView>

    <TextView
      android:id="@+id/ScoreY"
      android:layout_width="250dp"
      android:layout_height="62dp"
      android:fontFamily="casual"
      android:text="Jugador 2 :- 0"
      android:textColor="#0E1B79"
      android:textSize="30sp"
      android:textStyle="bold">

    </TextView>

  </LinearLayout>


  <RelativeLayout
    android:id="@+id/btn2"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_above="@id/btn5"
    android:layout_centerInParent="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:background="#F3ACC0">

    <ImageView
      android:id="@+id/buttonImage2"
      android:layout_width="match_parent"

      android:layout_height="match_parent">

    </ImageView>

  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/btn1"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_above="@id/btn5"
    android:layout_centerInParent="true"
    android:layout_marginBottom="20dp"
    android:layout_toLeftOf="@id/btn2"
    android:background="@color/purple_200">

    <ImageView
      android:id="@+id/buttonImage1"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    </ImageView>

  </RelativeLayout>


  <RelativeLayout
    android:id="@+id/btn3"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_above="@id/btn5"
    android:layout_centerInParent="true"
    android:layout_marginBottom="20dp"
    android:layout_toRightOf="@id/btn2"
    android:background="@color/purple_200">

    <ImageView
      android:id="@+id/buttonImage3"
      android:layout_width="match_parent"

      android:layout_height="match_parent">

    </ImageView>

  </RelativeLayout>

  <ImageButton
      android:id="@+id/sonido2"
      android:layout_width="69dp"
      android:layout_height="65dp"
      android:layout_marginLeft="350dp"
      android:layout_marginTop="8dp"
      android:background="@drawable/play"
      android:text="Button" />




</RelativeLayout>
